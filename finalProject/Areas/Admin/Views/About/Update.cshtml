
@{
    ViewData["Title"] = "Update";
}
@model AboutUpdateDto
<div class="row">
    <div class="grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <input hidden asp-for="@Model.getDto.Id" />
                        <label>Ad</label>
                        <input type="text" class="form-control" asp-for="@Model.aboutPost.Title" value="@Model.getDto.Title" placeholder="Ad">
                        <span asp-validation-for="@Model.aboutPost.Title"></span>
                    </div>
                    <div class="form-group">
                        <label>Sahə</label>
                        <input type="text" class="form-control" asp-for="@Model.aboutPost.Description" value="@Model.getDto.Description" placeholder="Sahə">
                        <span asp-validation-for="@Model.aboutPost.Description"></span>
                    </div>
                    <div class="form-group">
                        <label>Şəkil</label>
                        <input class="form-control" asp-for="@Model.aboutPost.formFile" placeholder="Şəkil">
                        <span asp-validation-for="@Model.aboutPost.formFile"></span>
                    </div>
                    @if (Model.getDto.Buttons.Count != 0)
                    {
                        @for (int i = 0; i < Model.getDto.Buttons.Count; i++)
                    {
                        <div class="form-group">
                            <label>Button</label>
                            <input class="form-control" asp-for="@Model.aboutPost.Buttons[i].Icon" value="@Model.getDto.Buttons[i].Icon" placeholder="Icon">
                            <input class="form-control" asp-for="@Model.aboutPost.Buttons[i].Name" value="@Model.getDto.Buttons[i].Name" placeholder="Name">
                            <span asp-validation-for="@Model.aboutPost.Buttons"></span>
                        </div>
                    }
                        
                    }else{
                        @for (int i = 0; i < 3; i++)
                        {
                            <div class="form-group">
                                <label>Button</label>
                                <input class="form-control" asp-for="@Model.aboutPost.Buttons[i].Icon" placeholder="Icon">
                                <input class="form-control" asp-for="@Model.aboutPost.Buttons[i].Name" placeholder="Name">
                                <span asp-validation-for="@Model.aboutPost.Buttons"></span>
                            </div>
                        }

                    }
                    <button type="submit" class="btn btn-primary me-2">Yadda saxla</button>
                    <button class="btn btn-light" asp-action="index" asp-controller="About">Ləğv et</button>
                </form>
            </div>
        </div>
    </div>
</div>
