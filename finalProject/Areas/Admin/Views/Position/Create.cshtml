
@{
    ViewData["Title"] = "Create";
}

@model PositionPostDto
<div class="row">
    <div class="grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label>Ad</label>
                        <input type="text" class="form-control" asp-for="Name" placeholder="Ad">
                        <span asp-validation-for="Name"></span>
                    </div>

                    <button type="submit" class="btn btn-primary me-2">Yadda saxla</button>
                    <button class="btn btn-light" asp-action="Index" asp-controller="position">Ləğv et</button>
                </form>
            </div>
        </div>
    </div>
</div>

