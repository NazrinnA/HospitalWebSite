    $(document).ready(function () {
        $(document).on("click", ".add-rezerv", function (e) {
            e.preventDefault();

            var nextIndex = $(this).attr("data-nextIndex");
            var inputGroup = `   <div class="form-group col-md-6" data-index="0">
