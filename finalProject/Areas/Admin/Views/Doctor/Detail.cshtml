
@{
    ViewData["Title"] = "Detail";
}

@model DoctorGetDto
<section class="vh-100" style="background-color: #f4f5f7;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class=" mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                             style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                            <img src="~/assets/img/@Model.Image"
                                 alt="Avatar" class="img-fluid my-5" style="max-width; border-radius: .5rem;" />
                            <h5>@Model.Name</h5>
                            <p>@Model.Position</p>
                        </div>
                        <div class="col-md-8 mt-3">
                            <div class="card-body p-4">
                                <h4 style="text-align:center">Məlumat</h4>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h5>Tam ad</h5>
                                        <p class="text-muted">@Model.Name @Model.Surname</p>
                                    </div>

                                </div>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h5>Email</h5>
                                        <p class="text-muted">@Model.Email</p>
                                    </div>
                                </div>

                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h5>Telefon</h5>
                                        <p class="text-muted">@Model.Phone</p>
                                    </div>

                                </div>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h5>Haqqında</h5>
                                        <p class="text-muted">@Model.About</p>
                                    </div>

                                </div>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h5>Sahə</h5>
                                        <p class="text-muted">@Model.Position.Name</p>
                                    </div>

                                </div>
                                @if (Model.Icons != null)
                                {

                                    <div class="d-flex justify-content-start">
                                        @foreach (var item in Model.Icons)
                                        {
                                            <h4 class="p-3 "><a href=@item.IconUrl>@Html.Raw(item.IconTag)</a></h4>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
