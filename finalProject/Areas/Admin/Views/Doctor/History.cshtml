
@{
    ViewData["Title"] = "History";
    int count = ((Model.CurrentPage-1)*7)+1;
}


@model PaginationDto<ResGetDto>
<div class="row">
    <div class=" grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Ad</th>
                                <th>Tarix</th>
                                <th>Pasiyent</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Models != null)
                            {
                                @foreach (var item in Model.Models)
                                {

                                    <tr>
                                        <td>@count</td>
                                        <td> @item.Doctor.Name</td>
                                        <td>@item.date</td>
                                        <td>@item.UserEmail</td>
                                     
                                    </tr>
                                    count++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<nav aria-label="...">
    <ul class="pagination">
        <li class="page-item @(Model.Previous?"":"disabled")">
            <a class="page-link" asp-controller="Doctor" asp-action="History" asp-route-currentpage="@(Model.CurrentPage-1)" tabindex="-1">Previous</a>
        </li>
        @for (int i = 1; i < Model.PageCount + 1; i++)
        {
            <li class="page-item @(i==Model.CurrentPage?"active":"") "><a class="page-link" asp-controller="Doctor" asp-action="History" asp-route-currentpage="@i">@i</a></li>

        }

        <li class="page-item @(Model.Next?"":"disabled")">
            <a class="page-link" asp-controller="Doctor" asp-action="History" asp-route-currentpage="@(Model.CurrentPage+1)">Next</a>
        </li>
    </ul>
</nav>



