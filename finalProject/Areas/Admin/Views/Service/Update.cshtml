
@{
    ViewData["Title"] = "Update";
}

@model ServiceUpdateDto
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <input hidden asp-for="@Model.getDto.Id" />
                        <label>Başlıq</label>
                        <input type="text" class="form-control" asp-for="@Model.postDto.Title" value="@Model.getDto.Title" placeholder="Başlıq">
                        <span asp-validation-for="@Model.postDto.Title"></span>
                    </div>
                    <div class="form-group">
                        <label>Açıqlama</label>
                        <input type="text" class="form-control" asp-for="@Model.postDto.Description" value="@Model.getDto.Description" placeholder="Açıqlama">
                        <span asp-validation-for="@Model.postDto.Description"></span>
                    </div>
                    <div class="form-group">
                        <label>Icon</label>
                        <input type="text" class="form-control" asp-for="@Model.postDto.Icon" value="@Model.getDto.Icon" placeholder="Icon">
                        <span asp-validation-for="@Model.postDto.Icon"></span>
                    </div>
                    <div class="form-group">
                        <label>IconUrl</label>
                        <input class="form-control" asp-for="@Model.postDto.IconUrl" value="@Model.getDto.IconUrl" placeholder="IconUrl">
                        <span asp-validation-for="@Model.postDto.IconUrl"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Yadda saxla</button>
                    <button class="btn btn-light" asp-action="index" asp-controller="service">Ləğv et</button>
                </form>
            </div>
        </div>
    </div>
</div>
