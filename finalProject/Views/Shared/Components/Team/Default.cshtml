
@{
    ViewData["Title"] = "Default";
}
@model List<DoctorGetDto>
<div class="container-fluid py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5" style="max-width: 500px;">
            <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5">Həkimlərimiz</h5>
            <h1 class="display-4">İxtisaslı Səhiyyə Peşəkarları</h1>
        </div>
        <div class="owl-carousel team-carousel position-relative">
            @foreach (var item in Model)
            {
                
            <div class="team-item">
                <div class="row g-0 bg-light rounded overflow-hidden">
                    <div class="col-12 col-sm-7 h-100">
                        <img class="~/assets/img-fluid h-100" src="~/assets/img/@item.Image" style="width:auto">
                    </div>
                    <div class="col-12 col-sm-5 h-100 d-flex flex-column">
                        <div class="mt-auto p-4">
                            <h3>@item.Name</h3>
                            <h6 class="fw-normal fst-italic text-primary mb-4">@item.Position.Name</h6>
                            <p class="m-0">@item.About</p>
                        </div>
                        <div class="d-flex mt-auto border-top p-4">
                            @foreach (var item1 in item.Icons)
                                {
                                    @if (item1.IconUrl != null)
                                    {
                                        
                                  <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-3" href="@item1.IconUrl">@Html.Raw(item1.IconTag)</a>
                                    }

                                }    
                           
                        </div>
                    </div>
                </div>
            </div>
            }

        </div>
    </div>
</div>
