@model List<DoctorGetDto>
@foreach (var item in Model)
{

    <div class="col-lg-6 team-item">
        <div class="row g-0 bg-light rounded overflow-hidden ">
            <div class="col-12 col-sm-7 h-100 ">
                <img class="~/assets/img-fluid h-100" src="~/assets/img/@item.Image" style="object-fit: cover;">
            </div>

            <div class="col-12 col-sm-5 h-100 d-flex flex-column">
                <div class="mt-auto p-4">
                    <h3>@item.Name</h3>
                    <h6 class="fw-normal fst-italic text-primary mb-4">@item.Position.Name</h6>
                    <p class="m-0">@item.About</p>
                </div>
                <div class="d-flex mt-auto border-top p-4">
                    @foreach (var icon in item.Icons)
                    {
                        if (icon.IconTag != null)
                        {

                            <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-3" href=@icon.IconUrl> @Html.Raw(icon.IconTag)</a>
                        }

                    }

                </div>
            </div>
        </div>
    </div>
}